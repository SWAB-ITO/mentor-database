{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./backend"
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules", "build", ".next", "src"]
}
